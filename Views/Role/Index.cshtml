@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole> 

<div class="row">
    <div class="col-6">
        <h1 >Roles List</h1>
    </div>
    <div class="col-6 text-right" >
        <a asp-controller="Role" asp-action="Upsert" class="btn btn-primary" >Create new Role</a>
    </div>
</div>
<div class="p-4 border rounded">
    @if(Model.Any()) {
        <table class="table table-stripped border">
            <tr class="table-secondary">
                <th>ID</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach(var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="button-group text-center">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning text-white" style="cursor: pointer;" >
                                Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline" >
                                <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Are you sure you want to delete this role?')" >
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>

    }
</div>